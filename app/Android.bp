package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

genrule {
    name: "statslog-rkpd-java-gen",
    tools: ["stats-log-api-gen"],
    cmd: "$(location stats-log-api-gen) --java $(out) --module remoteprovisioner " +
        "--javaPackage com.android.rkpdapp --javaClass RkpdStatsLog",
    out: ["com/android/rkpdapp/RkpdStatsLog.java"],
}

aidl_interface {
    name: "com.android.rkpdapp-aidl",
    srcs: ["aidl/**/*.aidl"],
    local_include_dir: "aidl",
    unstable: true,
    backend: {
        cpp: {
            enabled: false,
        },
        java: {
            enabled: true,
            sdk_version: "module_current",
            min_sdk_version: "33",
            apex_available: [
                "com.android.rkpd",
            ],
        },
        ndk: {
            enabled: false,
        },
        rust: {
            enabled: false,
        },
    },
}

sdk {
    name: "rkpd-sdk",
    apexes: ["com.android.rkpd"],
}

java_defaults {
    name: "RkpdAppDefaults",
    sdk_version: "module_current",
    min_sdk_version: "UpsideDownCake",
    libs: [
        "framework-annotations-lib",
        "framework-connectivity",
        "framework-connectivity-t",
        "framework-statsd",
    ],
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
    static_libs: [
        "android.hardware.security.rkp-V3-java",
        "androidx.room_room-runtime",
        "androidx.work_work-runtime",
        "cbor-java",
        "com.android.rkpdapp-aidl-java",
    ],
    srcs: [
        ":statslog-rkpd-java-gen",
        "src/**/*.java",
    ],
    plugins: [
        "androidx.room_room-compiler-plugin",
    ],
}

android_app {
    name: "rkpdapp",
    defaults: ["RkpdAppDefaults"],
    resource_dirs: ["res"],
    privileged: true,
    updatable: false,
    apex_available: [
        "com.android.rkpd",
    ],
    lint: {
        strict_updatability_linting: true,
    },
}

// Rebuild all the app code into a library so we can link it into our unit tests.
// If we tried to target the com.android.rkpdapp package, the tests would fail on
// systems that have the google-signed version of the app installed because:
// 1. The tests would also have to be signed with the same key
// 2. The tests would have to target the signed package name (which is different)
//
// By rebuilding all the app source code into a library, permissions (especially note
// sepolicy) are not automatically granted to the unit tests.
android_library {
    name: "RkpdAppTestLibrary",
    defaults: ["RkpdAppDefaults"],
}
